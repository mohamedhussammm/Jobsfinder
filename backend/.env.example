# ─── Server ───────────────────────────────────────
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# ─── MongoDB ──────────────────────────────────────
MONGODB_URI=mongodb://localhost:27017/shiftsphere

# ─── JWT ──────────────────────────────────────────
JWT_ACCESS_SECRET=your_access_token_secret_here_change_me
JWT_REFRESH_SECRET=your_refresh_token_secret_here_change_me
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ─── Email (SMTP) ────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=ShiftSphere <noreply@shiftsphere.com>

# ─── Storage ─────────────────────────────────────
# Options: local | s3
STORAGE_TYPE=local

# S3-compatible settings (AWS S3, MinIO, Cloudflare R2)
S3_BUCKET=shiftsphere-uploads
S3_REGION=us-east-1
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_ENDPOINT=          # Leave empty for AWS S3, set for MinIO/R2

# ─── Default Admin ───────────────────────────────
ADMIN_EMAIL=admin@shiftsphere.com
ADMIN_PASSWORD=Admin@123456
ADMIN_NAME=System Admin
